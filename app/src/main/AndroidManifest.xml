<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bovink.androidlearning">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.NormalServiceActivity"
            android:label="Normal Service" />
        <activity
            android:name=".activity.IntentServiceActivity"
            android:label="Intent Service" />
        <activity
            android:name=".activity.BindServiceActivity"
            android:label="Bind Service" />
        <activity
            android:name=".activity.ForegroundServiceActivity"
            android:label="Foreground Service" />

        <service android:name=".service.SimpleWork" />
        <service android:name=".service.NormalService" />
        <service android:name=".service.HelloIntentService" />
        <service android:name=".service.LongWork" />
        <service android:name=".service.ForegroundService" />
    </application>

</manifest>