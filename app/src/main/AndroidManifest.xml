<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bovink.androidlearning">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.ExampleActivity" />
        <activity android:name=".activity.NormalServiceActivity"
            android:label="Normal Service"/>

        <service android:name=".service.SimpleWork" />

        <activity android:name=".activity.BindServiceActivity"/>
        <service android:name=".service.LongWork"/>
        <service android:name=".service.NormalService"/>
        <service android:name=".service.HelloIntentService"/>
    </application>

</manifest>