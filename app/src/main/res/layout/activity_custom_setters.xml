<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="CustomSettersActBinding">

        <variable
            name="person"
            type="com.bovink.androidlearning.model.Person" />

        <variable
            name="handler"
            type="com.bovink.androidlearning.databinding.attributesetters.CustomSettersActivity.EventHandler" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.bovink.androidlearning.widget.StudentView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:age="@{person.age}"
            app:name="@{person.name}" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> handler.changeAge()}"
            android:text="change age" />
    </LinearLayout>
</layout>
