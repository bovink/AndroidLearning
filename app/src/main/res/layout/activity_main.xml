<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bovink.androidlearning.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_goto_normalservice_act"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_normal_service" />

        <Button
            android:id="@+id/btn_goto_intentservice_act"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_intent_service" />

        <Button
            android:id="@+id/btn_goto_bind_act"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_bind_service" />

        <Button
            android:id="@+id/btn_goto_foreground_act"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="enterForegroundService"
            android:text="@string/activity_foreground_service" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
